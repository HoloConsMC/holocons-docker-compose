{
    servers {
        ## docs https://caddyserver.com/docs/caddyfile/options#trusted-proxies
        {$CADDY_TRUSTED_PROXIES}
        {$CADDY_STRICT_PROXIES}

        timeouts {
            read_body 120s
        }
    }
    admin off
    {$PARSED_AUTO_HTTPS}
    {$PARSED_LE_EMAIL}
}

{$PARSED_APP_URL} {
    root * /var/www/html/public
    encode gzip

    file_server
    php_fastcgi 127.0.0.1:9000 {
        env PHP_VALUE "upload_max_filesize=100M post_max_size=100M"

        dial_timeout 300s
        read_timeout 300s
        write_timeout 300s
    }
}
